  <style>
    :root{
      /* New Colors: Bluish-Purple Blend */
      --bg-0: #f7f3ff; /* Very Light Lavender */
      --bg-1: #e9e0ff; /* Light Violet/Blue */
      --bg-2: #c4b5fd; /* Mid Periwinkle/Purple */
      --accent: #8b5cf6; /* Strong Purple Accent (Tailwind's Violet-500) */
      --glass: rgba(255,255,255,0.78);
      --glass-dark: rgba(12,18,28,0.44);
      --muted: #64748b;
      --blue-glow: rgba(139,92,246,0.40); /* Updated glow to match new accent */
    }
    *{box-sizing:border-box;font-family:"Nunito",sans-serif}
    html,body{height:100%;margin:0;color:#0f172a;background:linear-gradient(180deg,var(--bg-0) 0%, var(--bg-1) 35%, var(--bg-2) 100%);}

    /* Layered blended background + waves */
    body::before{
      content:"";
      position:fixed; inset:0; z-index:0;
      background:
        radial-gradient(1200px 420px at 10% 8%, rgba(255,255,255,0.06), transparent 10%),
        radial-gradient(900px 300px at 90% 12%, rgba(255,255,255,0.04), transparent 8%),
        linear-gradient(180deg, rgba(250,253,255,0.6), rgba(225,242,254,0.35));
      pointer-events:none;
      backdrop-filter: blur(8px);
    }

    /* Noise overlay subtle */
    .noise {
      pointer-events:none;
      position:fixed; inset:0; z-index:2; mix-blend-mode:overlay;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="64" height="64"><filter id="t"><feTurbulence baseFrequency="0.9" numOctaves="1" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23t)" opacity="0.02"/></svg>');
      opacity:0.9;
    }

    /* Clouds container - SVGs absolute */
    .clouds { position:fixed; inset:0; z-index:1; pointer-events:none;
    }

    /* Glass cards */
    .glass {
      background:var(--glass);
      backdrop-filter:blur(10px) saturate(120%);
      border:1px solid rgba(105,142,162,0.08);
      box-shadow:0 8px 30px rgba(2,6,23,0.08);
      transition: transform .22s ease, box-shadow .22s ease;
    }
    .glass:hover{ transform: translateY(-6px); box-shadow:0 20px 40px rgba(2,6,23,0.12);
    }

    /* Title gentle float/bounce */
    .title-breath { display:inline-block; animation:breath 4.2s ease-in-out infinite; transform-origin:center;
    }
    @keyframes breath{
      0%,92%{ transform: translateY(0) scale(1);
    }
      96%{ transform: translateY(-6px) scale(1.004); }
      100%{ transform: translateY(0) scale(1);
    }
    }

    /* floating subtle animation for clouds/objects */
    .float-slow { animation: floatSlow 12s ease-in-out infinite;
    }
    @keyframes floatSlow { 0%,100%{ transform: translateY(0) } 50%{ transform: translateY(-8px) } }

    /* Blue hover glow used on interactive elements */
    .blue-glow-hover:hover { box-shadow: 0 10px 36px var(--blue-glow);
    transform: translateY(-4px); }

    /* Sparkles */
    .sparkle { position:absolute; width:5px; height:5px; border-radius:999px; background:linear-gradient(180deg,#fff,#fff);
    box-shadow:0 0 10px rgba(255,255,255,0.95); }

    /* Modals */
    .modal { display:none; position:fixed; inset:0;
    background: rgba(2,6,23,0.45); z-index:90; align-items:center; justify-content:center; padding:20px; }
    .modal.active { display:flex;
    }

    /* Swipe & cards */
    .card { border-radius:12px; background:white;
    box-shadow: 0 12px 36px rgba(2,6,23,0.12); overflow:hidden; }

    /* skeleton loader */
    .skeleton { background: linear-gradient(90deg,#f3f4f6 25%, #e6eef8 50%, #f3f4f6 75%);
    background-size:200% 100%; animation: load 1.4s linear infinite; }
    @keyframes load{ to { background-position: -200% 0 } }

    /* inputs straight & consistent */
    input[type="text"], input[type="email"], textarea, input[type="file"]{
      transform:none !important;
    border-radius:10px;
      padding:10px 12px;
      border:1px solid #e6eef8;
      background: rgba(255,255,255,0.9);
      width:100%;
      box-shadow:none;
    }
    textarea{ resize:vertical; min-height:100px;
    }

    /* star btn */
    .star-btn { cursor:pointer; transition: transform .12s ease;
    }
    .star-btn:hover { transform: scale(1.18); }

    /* profile dropdown */
    .profile-menu { display:none;
    position:absolute; right:0; top:40px; min-width:180px; background:var(--glass); border-radius:12px; padding:8px; box-shadow:0 8px 26px rgba(2,6,23,0.12); }
    .profile-wrap:hover .profile-menu { display:block;
    }

    /* success carousel */
    .carousel { display:flex; gap:12px; overflow:hidden; align-items:center;
    }
    .carousel-track { display:flex; gap:12px; transition:transform .45s cubic-bezier(.2,.8,.2,1); }
    .carousel-item { min-width:260px;
    flex:0 0 auto; }

    /* dark mode */
    .dark { --glass: rgba(10,14,22,0.6); --glass-dark: rgba(255,255,255,0.04);
    background: linear-gradient(180deg,#071027 0%, #0b2540 50%, #09304b 100%); color:#e6eef8; }
    .dark .glass{ background: var(--glass); border:1px solid rgba(255,255,255,0.06);
    box-shadow: none; color: #e6eef8; }
    .dark input, .dark textarea { background: rgba(255,255,255,0.03); color:#e6eef8; border:1px solid rgba(255,255,255,0.06);
    }

    /* small responsive */
    @media (min-width:1024px){ .min-w-72{ min-width:340px } }
  </style>
</head>
